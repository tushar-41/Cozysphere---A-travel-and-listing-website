<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3 mb-5">Sign Up for Cozysphere</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div>
                <label for="username" class="form-label">USERNAME</label>
                <input name="username" id="username" placeholder="Enter Username" type="text" class="form-control" required>
                <div class="valid-feedback">
                   Looks good
                </div>
                <div class="invalid-feedback">
                    Please provide username
                 </div>
                </div>
                <div>
                    <label for="email" class="form-label">EMAIL</label>
                    <input name="email" id="email" placeholder="Enter Email" type="text" class="form-control" required>
                <div class="invalid-feedback">
                    Please provide email
                </div>    
                </div>
                <div>
                    <label for="password" class="form-label">PASSWORD</label>
                    <input name="password" id="password" placeholder="Enter password" type="text" class="form-control" required>
                </div>
                <button type="submit" type="button" class="btn btn-success mt-5">SIGNUP</button>
        </form>
    </div>
</div>